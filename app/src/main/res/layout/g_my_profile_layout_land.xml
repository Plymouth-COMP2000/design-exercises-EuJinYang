<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#292E32">

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrowback"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Back" />

        <!-- Profile Image and Basic Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Profile Image Container with Hover Effect -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <!-- Main Profile Image -->
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Profile picture" />

                <!-- Dark Overlay (initially hidden) -->
                <View
                    android:id="@+id/image_overlay"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_overlay"
                    android:visibility="invisible" />

                <!-- Camera Icon (initially hidden) -->
                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_camera"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:contentDescription="Change profile picture" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Edit Profile Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Edit Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Username Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/username_text"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:hint="Enter username" />

            </LinearLayout>

            <!-- Phone Number Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:hint="Enter phone number"
                    android:inputType="phone" />

            </LinearLayout>

            <!-- Password Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/password_text"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:hint="Enter password" />

            </LinearLayout>

            <!-- Save Changes Button -->
            <Button
                android:id="@+id/save_changes_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#E7AF2F"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:shapeAppearanceOverlay="@style/BottomNavCardShape">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:drawableTop="@drawable/ic_profile"
                android:drawablePadding="0dp"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"/>

            <Button
                android:id="@+id/menu_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Menu"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:drawableTop="@drawable/ic_menu"
                android:drawablePadding="0dp"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"/>

            <Button
                android:id="@+id/reservation_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Reservation"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:drawableTop="@drawable/ic_reservation"
                android:drawablePadding="0dp"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>