<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292E32">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrowback"
        android:layout_marginStart="26dp"
        android:layout_marginTop="46dp"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifying Your Number"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We have sent the 6-digit verification code to your phone via SMS. Please enter it below."
            android:textSize="12sp"
            android:textColor="#BBBBBB"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <!-- 6-digit code input -->
        <LinearLayout
            android:id="@+id/ll_code_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:weightSum="6"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/et_digit1"
                style="@style/CodeInputStyle"/>
            <EditText
                android:id="@+id/et_digit2"
                style="@style/CodeInputStyle"/>
            <EditText
                android:id="@+id/et_digit3"
                style="@style/CodeInputStyle"/>
            <EditText
                android:id="@+id/et_digit4"
                style="@style/CodeInputStyle"/>
            <EditText
                android:id="@+id/et_digit5"
                style="@style/CodeInputStyle"/>
            <EditText
                android:id="@+id/et_digit6"
                style="@style/CodeInputStyle"/>
        </LinearLayout>

        <!-- Timer TextView -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Remaining: 02:00"
            android:textSize="12sp"
            android:textColor="#BBBBBB"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Code"
            android:textColor="#000000"
            android:backgroundTint="#E7AF2F"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive code? Resend"
            android:textColor="#BBBBBB"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>