<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#292E32">

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Image and Username Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:contentDescription="Profile picture" />

            <!-- Username -->
            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="16px" />

        </LinearLayout>

    </LinearLayout>

    <!-- Profile Options Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Options Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Profile Item 1: Notification -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A3F43"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_notification"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notification"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrowforward"
                        app:tint="#E7AF2F"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Profile Item 2: My Profile -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A3F43"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_my_profile"
                        app:tint="#FFFFFF"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Profile"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrowforward"
                        app:tint="#FFFFFF"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Profile Item 3: Logout -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#3A3F43"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_logout"
                        app:tint="#FF4444"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Logout"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrowforward"
                        app:tint="#FF4444"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:shapeAppearanceOverlay="@style/BottomNavCardShape">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:drawableTop="@drawable/ic_profile"
                android:drawablePadding="0dp"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"/>

            <Button
                android:id="@+id/menu_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Menu"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:drawableTop="@drawable/ic_menu"
                android:drawablePadding="0dp"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"/>

            <Button
                android:id="@+id/reservation_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Reservation"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:drawableTop="@drawable/ic_reservation"
                android:drawablePadding="0dp"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>