<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Name Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/customer_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="What would you like to be called?"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Party Size Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party Size"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/party_size_1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="45dp"
                android:backgroundTint="#E7AF2F"
                app:cornerRadius="100dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/party_size_2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginEnd="45dp"
                android:backgroundTint="#E7AF2F"
                app:cornerRadius="50dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/party_size_3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="15sp"
                android:layout_marginEnd="45dp"
                android:textColor="#000000"
                android:backgroundTint="#E7AF2F"
                app:cornerRadius="50dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/party_size_4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:textColor="#000000"
                android:backgroundTint="#E7AF2F"
                app:cornerRadius="50dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Horizontal Line Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Date and Time Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Date Picker -->
        <EditText
            android:id="@+id/reservation_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Select Date"
            android:layout_marginEnd="8dp"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none" />

        <!-- Time Picker -->
        <NumberPicker
            android:id="@+id/reservation_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="120dp"
            android:minHeight="120dp" />
    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Confirm My Reservation"
            android:backgroundTint="#E7AF2F"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginStart="100dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>